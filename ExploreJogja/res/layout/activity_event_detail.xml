<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventsPage" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp" 
        android:gravity="center"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/events" />

        <ImageView
            android:id="@+id/eventCoverDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/standupbight2" />

    </RelativeLayout>
    <LinearLayout
        android:background="#FF0000"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/eventTitle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent" 
        	android:layout_height="wrap_content"
        	android:fontFamily="sans-serif-condensed"
        	android:textSize="20sp"
        	android:textColor="#FFFFFF"
        	android:text="STAND UP NIGHT #2"
            />
        <TextView 
            android:layout_marginLeft="10dp"
            android:id="@+id/eventDate"
            android:layout_width="match_parent" 
        	android:layout_height="wrap_content"
        	android:fontFamily="sans-serif-condensed"
        	android:textSize="20sp"
        	android:textColor="#FFFFFF"
        	android:text="14 Desember 2012"
            />
        <TextView 
            android:layout_marginLeft="10dp"
            android:id="@+id/eventJam"
            android:layout_width="match_parent" 
        	android:layout_height="wrap_content"
        	android:fontFamily="sans-serif-condensed"
        	android:textSize="20sp"
        	android:textColor="#FFFFFF"
        	android:text="8.00-11.00 PM"
            />
        </LinearLayout>
        <ScrollView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent" 
        	android:layout_height="wrap_content"
            >
        <TextView 
            android:id="@+id/eventDesc"
            android:layout_width="match_parent" 
        	android:layout_height="wrap_content"
        	android:fontFamily="sans-serif"
        	android:textSize="15sp"
        	android:textColor="#C0C0C0"
        	android:text="Deskripsi bla bla bla"
            />
        </ScrollView>
</LinearLayout>
