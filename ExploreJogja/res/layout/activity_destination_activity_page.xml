<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DestinationActivityPage" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/destinationpage1" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
             android:layout_height="75dp"
            android:scaleType="fitXY"
            android:onClick="imgHistoClk"
            android:src="@drawable/historicalplace1">
        </ImageButton>
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
             android:layout_height="75dp"
            android:scaleType="fitXY"
            android:onClick="imgTempleClk"
            android:src="@drawable/temple1">
        </ImageButton>
    </LinearLayout>
    <LinearLayout 
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:onClick="imgSpadvenClk"
            android:src="@drawable/spadven1">
        </ImageButton>
        <ImageButton
           android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
             android:layout_height="75dp"
            android:scaleType="fitXY"
            android:onClick="imgNatClk"
            android:src="@drawable/nature1" >
        </ImageButton>
    </LinearLayout>
     <LinearLayout 
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
             android:layout_height="75dp"
            android:scaleType="fitXY"
            android:onClick="imgMuseumClk"
            android:src="@drawable/museum1">
        </ImageButton>
        <ImageButton
           android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
             android:layout_height="75dp"
            android:scaleType="fitXY"
            android:onClick="imgVillageClk"
            android:src="@drawable/village1" >
        </ImageButton>
    </LinearLayout>
    <LinearLayout 
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
           android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:onClick="imgZooClk"
            android:src="@drawable/zoo1" >
        </ImageButton>
    </LinearLayout>
</LinearLayout>